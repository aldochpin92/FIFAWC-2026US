/* Base styles */
body {
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f0f0f0; /* light silver tone */
    color: #1a1a1a;
}

/* Header */
header {
    background-color: #002868; /* deep blue */
    color: #ffffff;
    padding: 2rem;
    text-align: center;
    border-bottom: 5px solid #bf0a30; /* bold red accent */
}

/* Navigation */
nav ul {
    display: flex;
    justify-content: center;
    list-style: none;
    background-color: #bf0a30; /* red */
    padding: 0.75rem;
    margin: 0;
}

nav ul li {
    margin: 0 1rem;
}

nav ul li a {
    color: #ffffff;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease;
}

nav ul li a:hover {
    color: #c0c0c0; /* silver hover */
}

/* Sections */
section {
    padding: 2rem;
    max-width: 800px;
    margin: 2rem auto;
    background-color: #ffffff;
    border-left: 5px solid #c0c0c0; /* silver accent */
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    border-radius: 8px;
}

/* Quiz placeholder */
#quiz p {
    font-style: italic;
    color: #555;
}

/* Optional: Add a patriotic banner or stars */
header::after {
    content: "★ ★ ★";
    display: block;
    margin-top: 0.5rem;
    font-size: 1.2rem;
    color: #c0c0c0; /* silver stars */
}
